{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 112,
  "trailingComma": "es5",
  "importOrder": [
    "^@/types/?(.*)$",
    "^@/models/?(.*)$",
    "^@/api/?(.*)$",
    "^@/firebase/?(.*)$",
    "^@/stores/?(.*)$",
    "^@/utils/?(.*)$",
    "^@/constants/?(.*)$",
    "^@/components/?(.*)$",
    "^@/views/?(.*)$",
    "^@/assets/?(.*)$",
    "^@/layouts/?(.*)$",
    "^@/router/?(.*)$",
    "^@/styles/?(.*)$",
    "^[./]"
  ],
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-css-order",
    "prettier-plugin-tailwindcss"
  ]
}
